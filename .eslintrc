{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-mixed-operators": "off",
    "prefer-template": "warn",
    "no-console": "warn",
    "no-alert": "error",
		"import/no-extraneous-dependencies": "off"
  },
  "settings": {
    "import/resolve": {
      "moduleDirectory": [
        "node_modules"
      ]
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
 "globals": {}
}
